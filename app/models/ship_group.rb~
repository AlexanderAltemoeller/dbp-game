class ShipGroup < ActiveRecord::Base
  belongs_to :fighting_fleet
  belongs_to :unit
  validates :number, :numericality => { :greater_than_or_equal_to => 0 }

  def ship_name
    return Unit.find()
  end

  def get_damage
    return self.unit.damage    
  end
  
  def get_number
    return self.number
  end
 
  def get_hp
    return self.unit.shell
  end
  def get_id
    return self.unit.id
  end
end
