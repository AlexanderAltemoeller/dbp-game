<p id="notice"><%= notice %></p>

<h1 id="table" >Stationen</h1><br/>

<table id="Ships" class="content">
  <thead>
    <tr id="table_1">
      <th> </th>
      <th>Name</th>
      <th>Level</th>
      <th> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @ships_stations.each do |ships_station| %>
      <tr>
        <td>
         <a>
            <img src= "<%= image_url(ships_station.station.icon)%>", width="50", height="50", id="icon">
            <span><%= Message.find_by_code(ships_station.station.id).mes %></span>
         </a>
        <td><%= ships_station.station.name %></td>
        <td><%= ships_station.station.initial_level %></td>
        <td><%= link_to 'Upgrade', ships_station, data: { confirm: 'Link in progress!' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back', ships_path %>
