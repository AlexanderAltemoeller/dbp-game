<p id="notice"><%= notice %></p>

<h1>Stationen</h1><br/>

<table id="stationsite">
  <thead>
    <tr id="table">
      <th> </th>
      <th>Name</th>
      <th>Beschreibung</th>
      <th>Level</th>
      <th> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Station.all.each do |ships_station| %>
      <tr>
        <td><img src="<%= image_url(ships_station.icon) %>", height="50", width="50"></td>
        <td><%= ships_station.name %></td>
        <td><%= ships_station.description %></td>
        <td><%= ships_station.initial_level %></td>
        <td><%= link_to 'Upgrade', ships_station, data: { confirm: 'Link in progress!' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
