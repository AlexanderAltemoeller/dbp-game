<p id="notice"><%= notice %></p>

<h1>Listing Sciences</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost1</th>
      <th>Cost2</th>
      <th>Cost3</th>
      <th>Duration</th>
      <th>Available</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% scienceList = SciencesController.getSciences(current_user) %>

    <% @sciences.each do |science| %>
      <tr>
        <td><%= science.name %></td>
        <td><%= science.cost1 %></td>
        <td><%= science.cost2 %></td>
        <td><%= science.cost3 %></td>
        <td><%= science.duration.strftime("%T") %></td>
        <td><%= "true" %>
        <td><%= scienceList[science] %>
        <td><%= button_to 'Research', research_science_path(science), method: :get %></td>
        <td><%= link_to 'Show', science %></td>
        <td><%= link_to 'Edit', edit_science_path(science) %></td>
        <td><%= link_to 'Destroy', science, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

