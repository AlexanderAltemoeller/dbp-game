<p id="notice"><%= notice %></p>

<h1>Listing Ranks</h1>

<table>
	<thead>
		<tr>
			<th>UserID</th>
			<th>Score</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<div id="ranking">
		<% RanksController.rankList(0,10).each do |rank, pos| %>
		<p>
			<center>
				<%= pos %>. <%= rank.score %><br/> <%=User.find_by_id(rank.user_id).email%>
			</center>
		</p>
		<% end %>
	</div>

	<tbody>
		<% @ranks.each do |rank| %>
			<tr>
			<td><%= rank.user_id %></td>
			<td><%= rank.score %></td>
			<td><%= link_to 'Show', rank %></td>
			<td><%= link_to 'Edit', edit_rank_path(rank) %></td>
			<td><%= link_to 'Destroy', rank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Rank', new_rank_path %>
