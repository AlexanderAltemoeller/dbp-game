<p id="notice"><%= notice %></p>

<h1>Schiffe</h1><br/>

<table id="stationsite">
  <thead>
    <tr id="ship_t1">
      <th>Name</th>
      <th>Auswahl</th>
      <th>Station</th>
    </tr>
  </thead>
  
  <tbody>
   <% current_user.user_ships.each do |usership| %>
      <tr id="ship_t1">
        <td id="ship_t2"><%= usership.ship.name %></td>
        <td id="ship_t2"><%= link_to 'Auswählen', ship_path(usership.ship) %></td>
        <td id="ship_t2"><%= link_to 'Name ändern', edit_ship_path(usership.ship) %></td>
        <td id="ship_t2"><%= link_to 'Stationen', ship_ships_stations_path(usership) %></td>
        <td><%= button_to "CheatRes", cheat_ship_path(usership), method: :get %></td>
        <% usership.ship.update_resources %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if current_user.ship_counter < 9%>
  <% if current_user.next_ship_allowed %>
    <%if current_user.has_enough_resources(200000, 100000, 0) || current_user.ship_counter == 0%>
      <div id="coord_button"> 
        <p class="userbutton"><%= link_to 'New Ship', new_ship_path %>   </p>      
      </div>
    <%else%>
      <p class="ship_t1"> Nicht genug Rohstoffe für ein neues Schiff! </p>
    <%end%>
  <% else %>
    <p class="ship_t1"> Forsche Pioniersausbildung für ein zusätzliches Schiff </p>
  <% end %>
<%else %>
  <p class="ship_t1"> Du darfst nicht mehr als neun Schiffe besitzen! </p>
<%end%>

