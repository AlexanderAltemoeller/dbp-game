<p id="notice"><%= notice %></p>

<h1>Listing Ships</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% UserShip.where(:user_id => current_user.id).each do |usership| %>
      <tr>
        <td><%= usership.ship.name %></td>
        <% usership.ship.update_resources %>
        <td>(<%= usership.ship.metal %>)</td>
        <td>(<%= usership.ship.cristal %>)</td>
        <td>(<%= usership.ship.fuel %>)</td>
        <td><%= link_to 'Show', usership.ship %></td>
        <td><%= link_to 'Edit', edit_ship_path(usership.ship) %></td>
        <td><%= link_to 'Destroy', usership.ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %> 
  </tbody>
</table>

