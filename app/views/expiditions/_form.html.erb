<%= form_for(@expidition) do |f| %>
   <% if @expidition.errors.any? %>
      <div id="error_explanation">
         <h2><%= pluralize(@expidition.errors.count, "error") %> prohibited this expidition from being saved:</h2>

         <ul>
            <% @expidition.errors.full_messages.each do |message| %>
               <li><%= message %></li>
            <% end %>
         </ul>
      </div>
   <% end %>

   <div class="field">
   Expeditionszeit in Stunden:<br>
   <%= number_field_tag(:exp_time, 1, within: 1...25) %>

   <table>
      <tr>
         <td>Einheit</td>
         <td>stationierte Menge</td>
         <td>zu schickende Anzahl</td>
      </tr>

      <% @units.each do |unit| %>
         <tr>
           <td><%= unit.name %></td>       
           <td><%= unit.id %></td>
           <!--#TODO ID gegen Datenbankabfrage austauschen und Max Werte für die Einheiten hinzufügen-->
           <td><%= number_field_tag(unit.id, 0, min:0) %></td>
         </tr>
      <% end %>

            </table>
   <div class="actions">
      <%= f.submit %>
   </div>
<% end %>
