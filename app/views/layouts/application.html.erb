<!DOCTYPE html>
<html>
<head>
	<title>Strategiespiel</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
<div id="main">
	<div id="wrapper">
		<div id="top" >
			<div id="login" class="content">
				<% if !user_signed_in? %>
				  <%= form_for(:user, :url => session_path(:user)) do |f| %>
	  			    <%= f.text_field :login %>
				    <%= f.password_field :password %>
				    <%= f.check_box :remember_me %>
				    <%= f.label :remember_me %>
				    <%= f.submit 'Sign in' %>
					<% end %>
				<% else %>
					<%= current_user.username %>
					<%= link_to('ausloggen', destroy_user_session_path, :method => :delete) %>
				<% end %>  
			</div>
			<div id="banner" class="content">
				<h1>SpielName</h1>
			</div>
		</div>

		<div id="mid">
			<div id="ranking" class="content">
				<p>TEST</p>
			</div>
			<div id="resources" class="content">
				<%= Time.now %>
			</div>
		</div>

		<div id="botm">
			<div id="menu" class="content">
				<%= link_to("Home", home_index_path) %>
				<% if user_signed_in? %>
					<p>Hallo, <%= current_user.email %> m√∂chtest du dich  
					<%= link_to('ausloggen', destroy_user_session_path, :method => :delete) %>?</p>
					<%= link_to('Edit', edit_user_registration_path) %>
				<% else %>
					<%= link_to('Register', new_user_registration_path) %>
					<%= link_to('Log in', new_user_session_path) %>

				<% end %>
			</div>
			<div id="game" class="content">
				<%= yield %>
			</div>
		</div>
	</div>
</div>
</body>
</html>
