<p id="notice"><%= notice %></p>

<h1>Listing Facilities</h1>

<table>
  <thead>
    <tr>
      <th>Cost1</th>
      <th>Cost2</th>
      <th>Cost3</th>
      <th>Duration</th>
      <th>Name</th>
      <th>Facility condition</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.cost1 %></td>
        <td><%= facility.cost2 %></td>
        <td><%= facility.cost3 %></td>
        <td><%= facility.duration %></td>
        <td><%= facility.name %></td>
        <td><%= facility.facility_condition_id %></td>
        <td><%= facility.icon %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

