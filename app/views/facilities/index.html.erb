<p id="notice"><%= notice %></p>

<h1>Anlagen</h1>

<table id="table_facilities">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Metall</th>
      <th>Kristall</th>
      <th>Treibstoff</th>
      <th>Dauer</th>
      <th>Anzahl</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% resourcefactor = 500 %>
    <% current_user.ships.find(current_user.activeShip).facility_instances.sort_by{|instance| instance.facility.facility_condition_id}.each do |facility_instance| %>
     <% inactive = nil %>
     <% if(facility_instance.start_time.nil?) %>
       <tr id="inactive">
       <% inactive = true %>
     <% else %>
       <tr id="active">
       <% inactive = false %>
     <% end %>

     <% if(facility_instance.id) %>
       <% facility = facility_instance.facility %>
        <td>
          <a>
            <img src= "<%= image_url("facility_icons/" + facility.icon)%>", width="50", height="50", id="icon">
          <span><%= Message.find_by_code(facility.facility_condition_id+3000).mes %></span></a>
        </td>
        <td><%= facility.name %></td>
        <td><%= (facility.cost1 * resourcefactor).to_i %></td>
        <td><%= (facility.cost2 * resourcefactor).to_i %></td>
        <td><%= (facility.cost3 * resourcefactor).to_i %></td>

        <% if(inactive) %>
          <td id = "not_running"><%= Facility.update_time(facility_instance, true).to_s %></td>
        <% else %>
          <td id = "running"><%= Facility.update_time(facility_instance, false).to_s %></td>
          <%= javascript_tag "start_timer()" -%>
        <% end %>
        <% availability = current_user.check_condition(facility.condition) && !current_user.is_building %>
        <td><%= facility_instance.count %>

        <% if availability %>
          <td><%= button_to 'Bauen', build_facility_instance_path(facility_instance), method: :get %></td>
        <% else %>
          <% if(inactive) %>
            <td><a>Nicht verf√ºgbar<span><%= facility_instance.get_conditions() %></span></a></td>
          <% else %>
            <td><%= button_to 'Abbrechen', cancel_build_facility_instance_path(facility_instance), method: :get %>
            <td><%= button_to 'Sofort', instant_build_facility_instance_path(facility_instance), method: :get %></td>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    </tr>
  </tbody>
</table>
<br>
<%= link_to 'New Facility', new_facility_path %>
<%= link_to 'LevelCheat', facility_instances_path %>
